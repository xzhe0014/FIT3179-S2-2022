{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "vconcat": [
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/owid/monkeypox/main/owid-monkeypox-data.csv"
            },
            "key": "location",
            "fields": ["total_cases_per_million", "date"]
          }
        },
        {
          "filter": {"param": "time_brush"}
        }
      ],
      "width": "container",
      "height": 600,
      "title": "Monkeypox: Total Cases per Million",
      "projection": {"type": "equalEarth"},
      "mark": {"type": "geoshape"},
      "encoding": {
          "color": {
            "field": "total_cases_per_million",
            "type": "quantitative",
            "scale": {"type": "log"},
            "title": "Total Cases Per Million"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "total_cases_per_million", "type": "quantitative", "title": "Total Cases Per Million"},
          {"field": "date", "type": "temporal", "title": "Last updated"}
        ]
      }
    },
    {
      "data": { "url": "https://raw.githubusercontent.com/owid/monkeypox/main/owid-monkeypox-data.csv" },
      "width": "container",
      "height": 400,
      "mark": "bar",
      "transform": [{"filter": {"param": "time_brush"}}],
      "encoding": {
        "x": {
          "field": "date",
          "timeUnit": "yearmonthdate",
          "axis": {"title": "", "format": "%Y %b %d"}
        },
        "y": {
          "field": "total_cases",
          "type": "quantitative",
          "axis": {"title": "Total Cases"}
        },
        "tooltip": [
          {"field": "total_cases", "type": "quantitative", "title": "Total Cases"},
          {"field": "date", "type": "temporal", "title": "Date"}
        ]
      }
    },
    {
      "data": { "url": "https://raw.githubusercontent.com/owid/monkeypox/main/owid-monkeypox-data.csv" },
      "width": "container",
      "height": 120,
      "mark": "bar",
      "params": [
        {
          "name": "time_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {
          "field": "date",
          "timeUnit": "yearmonthdate",
          "axis": {"title": "", "format": "%Y %b %d"}
        },
        "y": {
          "field": "total_cases",
          "type": "quantitative",
          "axis": {"title": "Total Cases"}
        },
        "tooltip": [
          {"field": "total_cases", "type": "quantitative", "title": "Total Cases"},
          {"field": "date", "type": "temporal", "title": "Date"}
        ]
      }
    }
  ]
}